{
  "installCommand": "npm ci --prefer-offline --no-audit --no-fund",
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "crons": [
    { "path": "/api/cron/daily", "schedule": "0 3 * * *" },
    { "path": "/api/cron/hourly", "schedule": "0 * * * *" },
    { "path": "/api/cron/monthly", "schedule": "0 3 1 * *" }
  ]
}
